<style>

  /* General Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Nunito", serif;
}

body {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background-image: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);
}

.container {
    display: flex;
    flex-direction: row;
    max-width: 800px;
    width: 90%;
    height: 30vw;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease;
}

/* Login Form Styles */
.login-form {
    padding: 40px;
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.login-form h2 {
    font-size: 24px;
    color: #333;
}

.login-form p {
    color: #666;
    margin: 10px 0;
}

.login-form a {
    color: #53b09b;
    text-decoration: none;
}

.input-group {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
}

.input-group label {
    font-size: 14px;
    color: #555;
}

.input-group input {
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 5px;
    transition: border-color 0.3s;
}

.input-group input:focus {
    border-color: #53b09b;
    outline: none;
}

.options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 15px;
    font-size: 14px;
    color: #666;
}

.login-btn {
    margin-top: 20px;
    padding: 12px;
    background-color: #53b09b;
    color: white;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.login-btn:hover {
    background-color: #469f89;
}

.forgot-password {
    color: #666;
    text-decoration: none;
}

/* Illustration Section */
.illustration {
    width: 50%;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    animation: slideIn 1s ease;
}

.illustration-img {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
    animation: fadeIn 2s ease;
}

/* Animations */
@keyframes slideIn {
    from {
        transform: translateX(100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

/* Responsive Design */
@media (max-width: 768px) {
    .container {
        flex-direction: column;
        transform: scale(1);
    }
    .login-form, .illustration {
        width: 100%;
    }
}

    <style>
      * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Nunito", serif;
}

body {
    display: flex;
    background-color: #f5f5f5;
}
.main{
    width: 100%;
    display: flex;
    overflow: hidden;
}
 /* side  bar active */
 /* .sidebar {
    grid-area: sidebar;
    
    color: white;
    height: 100vh;
    overflow-y: auto;
  } */
  .sidebar {
    width: 16%;
    background-color: #53b09b;
    color: #fff;
    padding: 20px;
    padding-right: 0px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    z-index: 4;
    left: 0;
    top: 0;
    position: relative;
    /* display: none; */
    transition: all 0.5s ease-in-out;
    /* position: fixed; */
}
.sidebar h2 {
    font-size: 16px;
    margin-bottom: 25px;
}

  .sidebar-content {
    display: flex;
    flex-direction: column;
  }
  
  .sidebar-content .logo {
    display: flex;
    align-items: center;
    gap: 0px;
    /* padding: 0px; */
    margin-top: -10px;
    /* position: absolute; */
    /* background-color: #fff; */
  }
  
  .sidebar-content h3,i {
    color: white;
    font-size: 1em;
  }
  
  .main-content .upper-header i{
    display: none;
    font-size: 1em;
  }
  .sidebar-content img {
    height: 60px;
    /* border-radius: 50%; */
  }
  
  /* Sidebar items styling */
  .items {
    list-style: none;
    padding-top: 10px;
  }
  
  .items li {
    display: flex;
    align-items: center;
    padding: 14px 0;
    font-size: 1em;
  }
  
  .items li i {
    color: white;
    margin-right: 10px;
    margin-left: 20px;
  }
  
  .items li a {
    color: white;
    text-decoration: none;
  }
  
  .items li:hover {
    cursor: pointer;
    background-color: white;
    border-left: 4px solid #53b09b;
    padding-left: 16px;
    
  }
  
  .items li:hover a,
  .items li:hover i {
    /* color: #f3f4f6; */
    transition: 0.3s ease;
    color: #53b09b;
    transform: scale(1.05);
  }
  .upgrade {
    background-color: white;
    padding: 20px;
    border-radius: 8px;
    text-align: center;
    /* margin-left: -10px; */
    width: 90%;
    margin-top: 100%;
}

.upgrade p {
    font-size: 14px;
    margin-bottom: 10px;
    color: black;
}

.upgrade button {
    background-color: rgba(83, 176, 155,0.8);
    color: white;
    padding: 5px 10px;
    border: none;
    border-radius: 5px;
    margin-top: 10px;
    cursor: pointer;
}
.main .main-content {
    width: 65%;
    padding: 20px;
    /* background-color: #6b52ae; */
    height: 100vh;
    margin-left: 8px;
    /* overflow-y: auto;  */
}

.main .main-content::-webkit-scrollbar{
  display: none;
}
header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0px;
    flex-direction: column;
    margin-bottom: 0px;
    /* background-color: antiquewhite; */
    /* position: fixed; */
    /* z-index: 2; */
    /* position: absolute; */
}
header .upper-header{
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* background-color: rgba(83, 176, 155,0.4); */
    width: 100%;
    height: 60px;
    /* position: fixed; */
    z-index: 5;
    padding: 2px 25px;
    border-radius: 20px;

}
header .upper-header .search{
  height: 70%;
  width: 40%;
  display: flex;
  align-items: center;
  /* justify-content: space-evenly; */
  border: 1px solid #ccc;
  border-radius: 8px;
  padding: 5px 10px;
  /* background-color: #53b09b; */
  background-color: white;
}
.search i {
  font-size: 18px;
  color: #a62424;
  /* margin-right: 8px; */
}
.search button{
  width: 25%;
  height: 90%;
  border: none;
  border-radius: 5px;
  background-color: #53b09b;
  color: white;
}
.search input {
  border: none;
  outline: none;
  width: 100%;
  padding: 5px;
  font-size: 14px;
}

.right{
  height: 100%;
  width: calc(100% - 81% - 8px);
  /* background-color: #53b09b; */
  padding-top: 30px;
  padding: 16px;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  flex-direction: column;
  gap: 20px;
  /* margin-right: 400px; */
}
.personal-details{
  width: 100%;
  display: flex;
  align-items: center;
  height: 40px;
  /* background-color: #6b52ae; */
  gap: 15px;
  padding: 2px 15px;
  /* background-color: #6b52ae; */
  background-color: rgba(83, 176, 155,0.4);
  border-radius: 20px;
  margin-top: 16px;
}
.personal-details i{
  color: black;
}
.personal-details img{
  height: 50%;
  width: 12%;
  border-radius: 50%;
  margin-left: auto;
}

@media (max-width:600px) {
  .main{
    flex-direction: column;
  }
}
.form-container{
  width: 100%;
  height: 100vh;
  /* background-color: #53b09b; */
}


/* second */

  

    


.form-container .container {
  
  max-width: 500px;
  padding: 10px;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  background-color: rgba(255, 255, 255, 0.6);
  
}

.form-container h2 {
  text-align: center;
  margin-bottom: 10px;
  color: #333;
}

.form-container form label {
  font-size: 14px;
  color: #555;
}

.form-container form input {
  width: 100%;
  padding: 10px;
  margin: 6px 0;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.form-container .inline-inputs {
  display: flex;
  gap: 8px;
}

.form-container .inline-inputs input {
  flex: 1;
}

.form-container button {
  width: 100%;
  padding: 10px;
  background-color: #53B09B;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  cursor: pointer;
  margin-top: 10px;
}

.form-container button:hover {
  background-color: #53B09B;
}
  

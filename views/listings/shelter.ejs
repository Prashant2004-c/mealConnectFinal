    <script >
      const address = "99PR+HJX, Khelgaon, Ranchi, Jharkhand 834009";
        
        // Step 2: Replace 'YOUR_API_KEY' with your Gomaps geocoding API key
        const apiKey = 'AlzaSyMcxxkPDXGvkROsyXCWJuemiSWh_zXwfmq';
        
        // Function to fetch latitude and longitude for the given address
        async function getCoordinates(address) {
            const response = await fetch(`https://maps.gomaps.pro/maps/api/geocode/json?address=${encodeURIComponent(address)}&key=${apiKey}`);
            const data = await response.json();
            if (data.status === "OK") {
                const location = data.results[0].geometry.location;
                return { lat: location.lat, lng: location.lng };
            } else {
                throw new Error("Location not found");
            }
        }
        
        // Initialize the map
        function initMap(lat, lng) {
            const map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: lat, lng: lng },
                zoom: 18,
            });
            
            // Add a marker at the fetched coordinates
            new google.maps.Marker({
                position: { lat: lat, lng: lng },
                map: map,
                title: "Location of " + address,
            });
        }
        
        // Load map with marker based on the address
        async function loadMapWithAddress() {
            try {
                const { lat, lng } = await getCoordinates(address);
                initMap(lat, lng);
            } catch (error) {
                console.error("Error fetching coordinates:", error);
            }
        }
        
        // Load map when the page loads
        window.onload = loadMapWithAddress;
    </script>

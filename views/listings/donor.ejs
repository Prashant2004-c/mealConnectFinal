        carousel.style.transition = 'none';
        currentIndex = 1; // Jump back to the first actual image
        carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
        setTimeout(() => {
            carousel.style.transition = 'transform 0.5s ease';
        }, 0);
    }

